<% @schema.create_table(row_type: :array) do |table| %>
  <table>
    <thead>
      <tr>
        <% table.header.each do |val| %>
          <th><%= val %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% table.body(@items).each do |row| %>
        <tr>
          <% row.each do |val| %>
            <td><%= val %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
